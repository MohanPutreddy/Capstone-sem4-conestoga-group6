generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model category {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(100)
  products products[]
}

model products {
  id              Int      @id @default(autoincrement())
  bookname        String   @db.VarChar(45)
  authorname      String   @db.VarChar(45)
  price           String   @db.VarChar(45)
  description     String?  @db.VarChar(45)
  image           String?  @db.VarChar(100)
  categoryid      Int
  stock           Int
  discountpercent Int?
  category        category @relation(fields: [categoryid], references: [id])

  @@index([categoryid], map: "products_categoryid_fkey")
}

model users {
  id           Int      @id @default(autoincrement())
  username     String   @db.VarChar(45)
  password     String   @db.VarChar(100)
  email        String   @db.VarChar(45)
  otp          Int?
  role         String   @db.VarChar(45)
  firstname    String?  @db.VarChar(40)
  lastname     String?  @db.VarChar(40)
  dob          String?  @db.VarChar(20)
  address      String?  @db.VarChar(100)
  postalcode   String?  @db.VarChar(10)
  profileimage String?  @db.VarChar(200)
  isactive     Boolean?
}

model cart {
  id        Int @id @default(autoincrement())
  userid    Int
  productid Int
  count     Int
}

model ratings {
  id        Int     @id @default(autoincrement())
  productid Int
  userid    Int
  rating    Int?
  review    String? @db.VarChar(500)
  username  String? @db.VarChar(50)
}

model order_item {
  orderid  Int
  itemid   Int
  quantity Int
  price    Float @db.Float
  id       Int   @id @default(autoincrement())
}

model orders {
  orderid   Int     @id @default(autoincrement())
  userid    Int
  total     Float   @db.Float
  paymentid String  @db.VarChar(100)
  date      String? @db.VarChar(50)
}
